include ../blocks/nav/_nav.pug
include ../blocks/headline/_headline.pug
include ../blocks/benefits-short/_benefits-short.pug
include ../blocks/roadmap/_roadmap.pug
include ../blocks/button/_button.pug
include ../blocks/benefits/_benefits.pug
include ../blocks/modal/_modal.pug

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Document
        link(rel="stylesheet", href="./css/style.css")
        link(rel="icon" type="image/svg+xml" href="./favicon.svg")
        link(rel="alternate icon" href="./favicon.ico")
        link(rel="mask-icon" href="./safari-pinned-tab.svg" color="#000000")
    body
        .page.page--top-section
            .container.container--lg
                .row
                    .col-12
                        +nav
                .row
                    .col-12
                        +headline("КОМПЛЕКСНОЕ УПРАВЛЕНЧЕСКОЕ РЕШЕНИЕ", "повышения прибыльности бизнеса через технологический подход и международную практику").headline--top-section 
                +benefits-short
                .roadmap
                    .row
                        .col-xl-6.col-lg-6.col-md-12.d-flex.align-items-center.flex-column.justify-content-center
                            +roadmap('бизнес стратегия', 'Финансы','Рынок','Бренд','Дистрибуция')(src="./icons/dot.svg")
                        .col-xl-6.col-lg-6.col-md-12.d-flex.align-items-center.flex-column.justify-content-center
                            +roadmap('планирование - показатели - персонал', 'Бюджет','Метрики','Бонусы')(src="./icons/dot.svg")
                +button("получить программу")(class="button--top-section")(id="button--modal")
                +modal("Внимание!", "Тех. обслуживание сервера", "С 17.07.20 по 18.07.20 сайт будет недоступен. Будут проводится регламентные работы.")
        .page.page--benefits-section
            .container.container--lg
                .row
                    .col-12
                        +headline("10-ти НЕДЕЛЬНАЯ ПРОГРАММА").headline--benefits-section
                .row
                    .benefits__list
                        .col-12
                            .row
                                +benefits('Финансы','Рентабельность активов, продаж, инвестиций','1-2 недели')(src="./icons/pie-chart-second.svg")
                                +benefits('Дистрибуция','Каналы сбыта и модели продаж','3-4 недели')(src="./icons/graphic-design.svg")
                                +benefits('Маркетинг','Рынок, ассортимент, ценовые стратегии','5-6 неделя')(src="./icons/megaphone.svg")
                        .col-12
                            .row
                                +benefits('Стратегии','Рентабельность активов, продаж, инвестиций','7 неделя')(src="./icons/idea-second.svg")
                                +benefits('Планирование','Структура, мотивация, бюджет','8-9 неделя')(src="./icons/analitics.svg")
                                +benefits('Метрики','Управленческий радар','10 неделя')(src="./icons/radar.svg")
                +button("смотреть видео")(class="button--benefits-section")(src="./icons/video-player.svg")
        script(src="./js/script.js")